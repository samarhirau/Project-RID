<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"></noscript>

    <link rel="stylesheet" href="/css/ebookstyle.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    
    <script src="https://cdn.jsdelivr.net/npm/locomotive-scroll@beta/bundled/locomotive-scroll.min.js" defer></script>

    <title>E-Book Dashboard</title>
    <style>
        .star {
            color: gold;
            font-size: 1em;
        }
        .star.empty {
            color: lightgray;
        }
        .hidden {
            display: none;
        }
    </style>
</head>
<body>
    <div class="E-Book-Parent">
        <div class="left-side-panel">
            <div class="logo">
                <img src="/assets/final_logo.svg" alt="logo" loading="lazy">
                <button onclick="toggleMenu()" class="btn_mobile_open">•••</button>
            </div>
            <h1 class="special">RID's E-Book Center</h1>
            <button id="addNewBook" class="add-book">
                <span class="material-symbols-outlined">add</span>Add New E-Books
            </button>
            <h1 style="font-weight: 600;">Latest Reading</h1>

            <div class="book-card-holder" id="latestBooks">
                <% 
                  const reversedBooks = books.reverse();
                  for (let i = 0; i < 2 && i < reversedBooks.length; i++) { 
                      const book = reversedBooks[i]; 
                %>
                    <a href="/book/<%= book._id %>" class="book-card-link" style="text-decoration: none;">
                        <div class="book-card" data-title="<%= book.title.toLowerCase() %>">
                            <img src="<%= book.image %>" alt="<%= book.title %>" loading="lazy">
                            <div class="title-desc">
                                <h3><%= book.title %></h3>
                                <p class="desc"><%= book.description.substr(0, 100) + "..." %></p>
                                <p class="author-name">Author: <%= book.author %></p>
                                <div class="rating">
                                    <% for (let j = 0; j < 5; j++) { %>
                                        <% if (j < Math.floor(book.rating)) { %>
                                            <span class="material-symbols-outlined filledstar">star</span>
                                        <% } else if (j < book.rating) { %>
                                            <span class="material-symbols-outlined filledstar">star_half</span>
                                        <% } else { %>
                                            <span class="material-symbols-outlined notfilledstar">star</span>
                                        <% } %>
                                    <% } %>
                                </div>
                                <p>Publish Year: <%= book.publishYear %></p>
                            </div>
                        </div>
                    </a>
                <% } %>
            </div>
        </div>

        <div class="main-panel">
            <div class="upperbar">
                <div class="content-not-imp" id="notImp">
                    <h1>Explore E-Books, Research Papers & More</h1>
                    <p style="padding: 16px 0;">Explore the latest releases at RID's E-Book Center! Enjoy a seamless reading experience with our flipbook feature and take advantage of limited-time PDF download demos. Don't miss out on discovering new and exciting content! <br><br><a class="learn-more" href="#">Learn More</a></p>
                </div>

                <div class="navigation-bar" id="borderRem">
                    <ul>
                        <button onclick="toggleMenu()" class="btn_mobile">×</button>
                        <li><a href="#" class="active"><span class="material-symbols-outlined">home</span>Home</a></li>
                        <li><a href="#"><span class="material-symbols-outlined notfilled">newspaper</span>Research Paper</a></li>
                        <li><a href="#"><span class="material-symbols-outlined notfilled">book</span>Library</a></li>
                        <li><a href="#"><span class="material-symbols-outlined notfilled">settings</span>Setting</a></li>
                        <li><a href="#" onclick="awakeAction()"><span id="headerBTN" class="material-symbols-outlined">check_box_outline_blank</span>Hide Header</a></li>
                    </ul>
                    <div class="searchbar">
                        <span class="material-symbols-outlined">search</span>
                        <input type="search" id="searchInput" placeholder="Search...">
                    </div>
                </div>
            </div>

            <div class="bookcard-holder" id="allBooks">
                <% 
                    books.forEach(book => { 
                %>
                    <div class="book-card1" data-title="<%= book.title.toLowerCase() %>">
                        <img src="<%= book.image %>" alt="<%= book.title %>" loading="lazy">
                        <div class="title-desc1">
                            <a class="readbtn" href="/book/<%= book._id %>">View Details</a>
                            <h3><%= book.title %></h3>
                            <p>Publish Year: <%= book.publishYear %></p>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('addNewBook').addEventListener('click', () => {
            window.location.href = '/dashboardebook';
        });

        const searchInput = document.getElementById('searchInput');
        const allBookCards = document.querySelectorAll('.book-card1');

        searchInput.addEventListener('input', () => {
            const query = searchInput.value.toLowerCase();
            allBookCards.forEach(card => {
                const title = card.getAttribute('data-title');
                card.classList.toggle('hidden', !title.includes(query));
            });
        });

        const toggleMenu = () => {
            const borderRem = document.getElementById("borderRem");
            borderRem.style.display = borderRem.style.display === "none" ? "flex" : "none";
        };

        function awakeAction() {
            const headerBTN = document.getElementById("headerBTN");
            if (headerBTN.innerHTML === "check_box") {
                headerBTN.innerHTML = "check_box_outline_blank";
                document.getElementById("notImp").style.display = "block";
            } else {
                headerBTN.innerHTML = "check_box";
                document.getElementById("notImp").style.display = "none";
            }
        }
    </script>
</body>
</html>
