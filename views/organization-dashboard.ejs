  <body>
    <header>
      <div class="header-content">
        <h1>organisation Dashboard</h1>
        <p>Welcome, <%= organisation.ownerName %>! Here's an overview of your organisation's details.</p>
      </div>
      <div class="logout">
        <a href="/logout"><button id="logout-btn">Logout</button></a>
    </div>
    </header>

    <main>
      <section class="overview-section">
        <h2>organisation Overview</h2>
        <div class="info-container">
          <div class="info-box">
            <h3>organisation Name</h3>
            <p><%= organisation.organisationName %></p>
          </div>
          <div class="info-box">
            <h3>City</h3>
            <p><%= organisation.city %></p>
          </div>
          <div class="info-box">
            <h3>State</h3>
            <p><%= organisation.state %></p>
          </div>
          <div class="info-box">
            <h3>Owner Name</h3>
            <p><%= organisation.ownerName %></p>
          </div>
          <div class="info-box">
            <h3>Contact Number</h3>
            <p><%= organisation.contactNumber %></p>
          </div>
          <div class="info-box">
            <h3>Registration Number</h3>
            <p><%= organisation.registrationNumber ? organisation.registrationNumber : "Not Provided" %></p>
          </div>
          <div class="info-box">
            <h3>Website</h3>
            <p><%= organisation.websiteLink ? organisation.websiteLink : "Not Provided" %></p>
          </div>
        </div>
      </section>

